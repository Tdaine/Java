<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thrid"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Third">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汇总"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="输入时间:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/inputTime2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time2"
        android:layout_toRightOf="@+id/time2"
        android:hint="XXXX-XX-XX"/>
    <Button
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="按年查询"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/year"
        android:layout_toRightOf="@+id/year"
        android:layout_marginLeft="30dp"
        android:text="按月查询"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/month"
        android:layout_toRightOf="@+id/month"
        android:layout_marginLeft="30dp"
        android:text="按周查询"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总收入:"
        android:textSize="20dp"
        android:layout_marginTop="170dp"/>
    <TextView
        android:id="@+id/inDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/in"
        android:layout_toRightOf="@+id/in"/>
    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总支出:"
        android:textSize="20dp"
        android:layout_marginTop="220dp"/>

    <TextView
        android:id="@+id/outDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/out"
        android:layout_toRightOf="@+id/out"/>
</RelativeLayout>