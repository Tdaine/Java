<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abaka"
    tools:context=".sign_in">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="用户注册" />

    <TextView
        android:id="@+id/Usename2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        android:text="  用 户 名：" />

    <TextView
        android:id="@+id/Password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Usename2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="用户密码：" />

    <EditText
        android:id="@+id/inputUsename2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Usename2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/Usename2"
        android:hint="输入注册账号" />

    <EditText
        android:id="@+id/inputPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/Password2"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/Password2"
        android:hint="输入注册密码" />

    <Button
        android:id="@+id/Sure2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginLeft="80dp"
        android:text="确认" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Sure2"
        android:layout_toRightOf="@+id/Sure2"
        android:layout_marginLeft="50dp"
        android:text="取消" />
</RelativeLayout>
